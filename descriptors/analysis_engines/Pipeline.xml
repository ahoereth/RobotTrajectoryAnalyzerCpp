<?xml version="1.0" encoding="UTF-8" ?>
<!--
  descriptors/analysis_engines/Pipeline.xml
-->
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.cpp</frameworkImplementation>
  <primitive>false</primitive>

  <delegateAnalysisEngineSpecifiers>
    <delegateAnalysisEngine key="JointStatePopulator">
      <import location="../annotators/JointStatePopulator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="AccelerationAnnotator">
      <import location="../annotators/AccelerationAnnotator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="MovementAnnotator">
      <import location="../annotators/MovementAnnotator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="MovementDirectionAnnotator">
      <import location="../annotators/MovementDirectionAnnotator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="OscillationAnnotator">
      <import location="../annotators/OscillationAnnotator.xml"/>
    </delegateAnalysisEngine>
    <delegateAnalysisEngine key="ControllerAnnotator">
      <import location="../annotators/ControllerAnnotator.xml"/>
    </delegateAnalysisEngine>
  </delegateAnalysisEngineSpecifiers>

  <analysisEngineMetaData>
    <name>Pipeline</name>
    <description></description>
    <version>1.0</version>
    <vendor/>

    <!-- Configuration Parameter Definitions -->
    <configurationParameters>
      <configurationParameter>
        <name>Host</name>
        <type>String</type>
        <overrides>
          <parameter>JointStatePopulator/Host</parameter>
          <parameter>ControllerAnnotator/Host</parameter>
        </overrides>
      </configurationParameter>
      <configurationParameter>
        <name>Database</name>
        <type>String</type>
        <overrides>
          <parameter>JointStatePopulator/Database</parameter>
          <parameter>ControllerAnnotator/Database</parameter>
        </overrides>
      </configurationParameter>
    </configurationParameters>

    <!-- Configuration Parameter Values -->
    <configurationParameterSettings>
      <nameValuePair>
        <name>Host</name>
        <value>
          <string>localhost</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Database</name>
        <value>
          <string>dummy1</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>

    <!-- Pipeline flow constraints -->
    <flowConstraints>
      <fixedFlow>
        <node>JointStatePopulator</node>
        <node>AccelerationAnnotator</node>
        <node>MovementAnnotator</node>
        <node>MovementDirectionAnnotator</node>
        <node>OscillationAnnotator</node>
        <node>ControllerAnnotator</node>
      </fixedFlow>
    </flowConstraints>

  </analysisEngineMetaData>
</analysisEngineDescription>
